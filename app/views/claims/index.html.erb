<div class="container rounded bg-light text-dark mt-5 mb-5">
  <div class="d-flex justify-content-between">
    <h3>Claims</h3>
    <%= button_to 'make claim', new_employee_claim_path, class: 'btn btn-success', method: :get %>
  </div>
  <% if @contributions.present? %>
    <table class="table table-striped table-hover">
      <thead>
      <tr>
        <th>Amount</th>
        <th>Reason</th>
        <th>Date Contributed</th>
      </tr>
      </thead>

      <tbody>
      <% @claims.each do |claim| %>
        <tr>
          <td><%= claim.amount %></td>
          <td><%= claim.purpose %></td>
          <td><%= display_time(claim.created_at) %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  <% else %>
    <div class="alert alert-dark" role="alert">
      you don't have any claims yet. Click
      <%= link_to 'here', new_employee_claim_path, class: 'alert-link' %>
      to make your first one.
    </div>
  <% end %>
</div>
<br>

