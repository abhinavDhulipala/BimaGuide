<%= render 'layouts/navbar' %>

<p id="notice"><%= notice %></p>

<h1>Contributions</h1>
<div class="container-md rounded bg-light text-dark mt-5 mb-5">
  <% if @contributions %>
    <%= button_to 'make contributions', new_employee_contribution_path, class: 'alert-link' %>
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th>Amount</th>
          <th>Purpose</th>
          <th>Date Contributed</th>
        </tr>
      </thead>

      <tbody>
        <% @contributions.each do |contribution| %>
          <tr>
            <td><%= contribution.amount %></td>
            <td><%= contribution.purpose %></td>
            <td><%= contribution.created_at %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <div class="alert alert-dark" role="alert">
      you don't have any contributions yet. Click 
      <%= link_to 'here', new_employee_contribution_path, class: 'alert-link' %>
      to make your first one.
    </div>
  <% end %>
</div>
<br>

<%= link_to 'New Contribution', new_employee_contribution_path %>
