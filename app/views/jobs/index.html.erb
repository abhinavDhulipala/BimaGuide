<%= render 'layouts/navbar' %>

<h1>Jobs</h1>

<% if @jobs.empty? %>
<div class="alert alert-info" role="alert">
  You don't have any jobs added yet! Click <%= link_to 'here', new_employee_job_path, class: 'alert-link' %> to log your first job!
</div>
<% end %>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @jobs.each do |job| %>
      <tr>
        <td><%= link_to 'Show', job %></td>
        <td><%= link_to 'Edit', edit_employee_job_path(job) %></td>
        <td><%= link_to 'Destroy', job, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Job', new_employee_job_path %>
